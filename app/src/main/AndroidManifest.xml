<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.isen.Nicolas_LEBON">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nicolas_LEBON"
        android:usesCleartextTraffic="true">

        <activity android:name="fr.isen.Nicolas_LEBON.ble.BleScanActivity" />
        <activity android:name="fr.isen.Nicolas_LEBON.detail.DetailActivity" />
        <activity android:name="fr.isen.Nicolas_LEBON.category.CategoryActivity" />
        <activity android:name="fr.isen.Nicolas_LEBON.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>